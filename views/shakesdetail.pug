extends layout

block content
    h1= title

    if (toShow == null)
        h2 No instance to delete
    else
        - let shakesid = toShow._id 
        - let flavour = toShow.flavour 
        - let size = toShow.size
        - let cost = toShow.cost
        
        div 
        div.row 
        div(class='shakesAttr mr-3') shakes ID is: 
        div(class="shakes style") #{shakesid} 
        div.row 
        div(class='shakesAttr mr-3') shakes Flavour is: 
        div(class="shakes style")  #{flavour} 
        div.row 
        div(class='shakesAttr mr-3') shakes cost is: 
        div(class="shakes style")  #{cost} 
        div.row 
        div(class='shakesAttr mr-3') shakes size is: 
        div(class="shakes style")  #{size} 