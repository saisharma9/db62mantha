extends layout

block content
  h1= title
  p Welcome to the shakes pug
  div(class="container-fluid")
        div(class="row")
            -
                let shakes = results;
            each v,index in shakes 
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.flavour}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.size}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.cost}
  script.                
    function buy(itemNo)
    {
        alert(`you purchased Item ${itemNo+1}`)
    }